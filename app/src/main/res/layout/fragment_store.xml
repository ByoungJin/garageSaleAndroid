<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <!-- 첫번째 이미지 레이어 -->
        <!-- 첫번째 이미지 레이어 끝 -->

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/planet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 두번째 사용자정보 레이어 -->
        <FrameLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >
                    <RelativeLayout
                        android:id="@+id/layout1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        >

                    <TextView
                        android:id="@+id/editText9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판매자정보"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_centerInParent="true"
                        />

                    <TextView
                        android:id="@+id/editText10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="신용 등급 확인"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/layout1">

                <TextView
                    android:id="@+id/editText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="상점 이름"
                    android:textSize="12sp"
                    />

                    <TextView
                        android:id="@+id/editText11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:text="누구누구의 반짝행성"
                        android:layout_alignLeft="@+id/editText12"
                        android:layout_alignStart="@+id/editText12" />

                </RelativeLayout>

                </RelativeLayout>

        </FrameLayout>

        <!-- 두번째 사용자정보 레이어 끝 -->
        <!-- PATCH 탭 레이어 -->


        <!-- PATCH 탭 레이어 끝 -->

        <!-- 일곱번째 기타 버튼 -->

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/userInfoLayout"
            app:layout_constraintRight_toRightOf="@+id/userInfoLayout"
            app:layout_constraintTop_toBottomOf="@+id/userInfoLayout" />

        <LinearLayout
            android:id="@+id/etcLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/viewpager"
            app:layout_constraintRight_toRightOf="@+id/viewpager"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/viewpager"
            app:layout_constraintHorizontal_bias="0.0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="상점신고" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="메세지" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabs"
            android:layout_marginTop="-277dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/tabs"
            app:layout_constraintRight_toRightOf="@+id/tabs"
            app:layout_constraintTop_toBottomOf="@+id/tabs" />


        <!-- 일곱번째 기타 버튼 끝 -->
    </android.support.constraint.ConstraintLayout>
</layout>