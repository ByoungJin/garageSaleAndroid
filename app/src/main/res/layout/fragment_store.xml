<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 첫번째 이미지 레이어 -->
            <!-- 첫번째 이미지 레이어 끝 -->

            <FrameLayout
                android:id="@+id/imageLayout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <Button
                    android:id="@+id/button5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="◁" />

                <Button
                    android:id="@+id/button6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:text="▷" />
            </FrameLayout>

            <TextView
                android:id="@+id/CountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:text="1/57"
                app:layout_constraintLeft_toLeftOf="@+id/imageLayout"
                app:layout_constraintRight_toRightOf="@+id/imageLayout"
                app:layout_constraintTop_toBottomOf="@+id/imageLayout" />

            <!-- 두번째 사용자정보 레이어 -->
            <FrameLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/CountText"
                app:layout_constraintRight_toRightOf="@+id/CountText"
                app:layout_constraintTop_toBottomOf="@+id/CountText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- 왼쪽 사용자 이미지, 정보 레이어-->
                    <LinearLayout
                        android:layout_width="91dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/editText9"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="판매자정보"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            app:srcCompat="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/editText10"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ems="5"
                            android:text="신용 등급 보기"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- 오른쪽 상점이름, 상점설명-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/editText11"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="누구누구의 반짝행성"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/editText12"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:inputType="textPersonName"
                                android:text="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <!-- 두번째 사용자정보 레이어 끝 -->
            <!-- 충돌 프레그먼트
                       <RelativeLayout
                            android:id="@+id/autocompleteLayout"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            app:layout_constraintLeft_toLeftOf="@+id/userInfoLayout"
                            app:layout_constraintRight_toRightOf="@+id/userInfoLayout"
                            app:layout_constraintTop_toBottomOf="@+id/userInfoLayout">

                            <fragment
                                android:id="@+id/autocomplete"
                                android:name="com.garagesale.gapp.garagesale.fragment.GoogleAutoCompleteFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>-->
            <!-- 세번째 구글맵 레이어 -->
            <RelativeLayout
                android:id="@+id/mapLayout"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintLeft_toLeftOf="@+id/userInfoLayout"
                app:layout_constraintRight_toRightOf="@+id/userInfoLayout"
                app:layout_constraintTop_toBottomOf="@+id/userInfoLayout">

                <fragment
                    android:id="@+id/map"
                    android:name="com.garagesale.gapp.garagesale.fragment.GoogleMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/transparent_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
            <!-- 세번째 구글맵 레이어 끝 -->
            <!-- ++ 세번째 구글맵 테스트 레이어 (삭제예정)-->
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="@+id/mapLayout"
                app:layout_constraintRight_toRightOf="@+id/mapLayout"
                app:layout_constraintTop_toBottomOf="@+id/mapLayout">

                <EditText
                    android:id="@+id/editText13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:hint="위도"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:hint="경도"
                    android:textSize="12sp" />
            </LinearLayout>
            <!-- ++ 세번째 구글맵 테스트 레이어 끝 (삭제예정)-->

            <TextView
                android:id="@+id/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="상품 정보"
                app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
                app:layout_constraintRight_toRightOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <!-- 네번째 아이템 레이어 -->
            <RelativeLayout
                android:id="@+id/itemListLayout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="@+id/item"
                app:layout_constraintRight_toRightOf="@+id/item"
                app:layout_constraintTop_toBottomOf="@+id/item">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/itemList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#828282"
                    app:layoutManager="LinearLayoutManager" />

                <ImageView
                    android:id="@+id/addItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

                <ImageView
                    android:id="@+id/addItem2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/common_google_signin_btn_icon_dark_normal" />
            </RelativeLayout>
            <!-- 네번째 아이템 레이어  끝-->

            <TextView
                android:id="@+id/reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="댓글"
                app:layout_constraintLeft_toLeftOf="@+id/itemListLayout"
                app:layout_constraintRight_toRightOf="@+id/itemListLayout"
                app:layout_constraintTop_toBottomOf="@+id/itemListLayout" />

            <!-- 다섯째 댓글 레이어 -->
            <RelativeLayout
                android:id="@+id/replyListLayout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="@+id/reply"
                app:layout_constraintRight_toRightOf="@+id/reply"
                app:layout_constraintTop_toBottomOf="@+id/reply">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/replyList"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#828282"
                    app:layoutManager="LinearLayoutManager" />
            </RelativeLayout>
            <!--다섯째 댓글 레이어 끝 -->

            <!-- 여섯째 댓글달기 창 -->
            <LinearLayout
                android:id="@+id/inputreply"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="10"
                app:layout_constraintLeft_toLeftOf="@+id/replyListLayout"
                app:layout_constraintRight_toRightOf="@+id/replyListLayout"
                app:layout_constraintTop_toBottomOf="@+id/replyListLayout">

                <EditText
                    android:id="@+id/replytext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:hint="댓글을 입력해주세요" />

                <Button
                    android:id="@+id/replyaccept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:text="작성" />

            </LinearLayout>
            <!-- 여섯째 댓글달기 창 끝 -->
            <!-- 일곱번째 기타 버튼 -->
            <LinearLayout
                android:id="@+id/etcLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="@+id/inputreply"
                app:layout_constraintRight_toRightOf="@+id/inputreply"
                app:layout_constraintTop_toBottomOf="@+id/inputreply">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="상점신고" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="메세지" />

            </LinearLayout>
            <!-- 일곱번째 기타 버튼 끝 -->
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>